.about-page.data-v-13a78ac6 {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    padding: 0 15rpx;
    box-sizing: border-box;
    overflow-x: hidden;
}
  
  /* Logo和三行文字区域 */
.logo-section.data-v-13a78ac6 {
    text-align: center;
    margin-top: 120rpx;
    display: flex;
    flex-direction: column;
    align-items: center; /* 确保内容水平居中 */
}
.logo.data-v-13a78ac6 {
    width: 150rpx;         /* 宽度 */
    height: 150rpx;        /* 高度 */
    border-radius: 50%;  /* 圆形效果 */
    margin-bottom: 40rpx;
    display: block;      /* 确保图片居中时不受其他元素影响 */
}
.title.data-v-13a78ac6 {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
}
.tagline.data-v-13a78ac6 {
    font-size: 24rpx;
    color: #e8b23d;
    margin-bottom: 20rpx;
}
.location.data-v-13a78ac6 {
    font-size: 22rpx;
    color: #999;
    margin-bottom: 15rpx;
}
  
  /* 公司简介区域，增加高度和间距 */
.description-section.data-v-13a78ac6 {
    position: relative; /* 使引号定位相对于该容器 */
    background-color: #f0f0f0;
    padding: 60rpx;
    margin-top: 80rpx;
    width: 90%;
    text-align: center;
    border-radius: 10rpx;
    font-size: 28rpx;
    line-height: 1.5;
    min-height: 240rpx;
}
.quote.data-v-13a78ac6 {
    position: absolute; /* 使引号绝对定位 */
    font-size: 100rpx; /* 调整引号大小 */
    color: #aaa; /* 引号颜色 */
}
.left-quote.data-v-13a78ac6 {
    top: -20rpx; /* 调整左引号位置 */
    left: -20rpx; /* 调整左引号位置 */
}
.right-quote.data-v-13a78ac6 {
    bottom: -60rpx; /* 调整右引号位置 */
    right: -20rpx; /* 调整右引号位置 */
}
.description-text.data-v-13a78ac6 {
    font-size: 28rpx;
    line-height: 1.5;
    color: #333;
    white-space: normal;
    word-break: break-word;
    text-align: left;
    margin-bottom: 20rpx; /* 段落之间的间距 */
}
  
  /* 链接样式 */
.link.data-v-13a78ac6 {
    color: #1e90ff;
    display: block;
    margin-top: 20rpx;
}
  
  /* 功能按钮区域 */
.button-group.data-v-13a78ac6 {
    display: flex;
    justify-content: space-around;
    width: 70%;
    margin-top: 90rpx;
    margin-bottom: 100rpx;
}
.icon-button.data-v-13a78ac6 {
    background-color: transparent;
    /* border: 1px solid rgba(255, 255, 255, 0.559); */
    padding: 12rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0rpx 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
.icon-image.data-v-13a78ac6 {
    width: 65%;
    height: 65%;
    border-radius: 50%;
    object-fit: cover;
}
  
  /* 在线预约按钮 */
