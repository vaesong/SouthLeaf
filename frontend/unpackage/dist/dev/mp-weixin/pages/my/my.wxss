  display: flex;
  flex-direction: column;
  align-items: center;
}
.status-icon.data-v-2f1ef635 {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.status-text.data-v-2f1ef635 {
  font-size: 24rpx;
  color: #333;
}
.function-list.data-v-2f1ef635 {
  display: flex;
  flex-direction: column;
  width: 100vw;
  overflow: hidden;
}
.function-item.data-v-2f1ef635 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 50rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #e6e6e6;
}
.function-item.data-v-2f1ef635:last-child {
  border-bottom: none;
}
