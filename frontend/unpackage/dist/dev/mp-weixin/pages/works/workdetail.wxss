  margin-top: -5rpx;
  width: 100%; /* 图片宽度占满网格单元格 */
  border-radius: 10rpx;
  object-fit: cover; /* 保持图片比例填充 */
}

/* 列表布局样式 */
.image-gallery.list-layout.data-v-33468508 {
  display: block; /* 列表布局采用 block 显示 */
}
